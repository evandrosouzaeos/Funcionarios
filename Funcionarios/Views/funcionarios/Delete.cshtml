@model Funcionarios.funcionario

@{
    ViewBag.Title = "Delete";
}

<h2>Excluir</h2>

<h3>Deseja realmente excluir?</h3>
<div>
    <h4>Funcionário</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nome)
        </dd>

        <dt>
            @Html.DisplayName("Endereço:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.endereco)
        </dd>

        <dt>
            @Html.DisplayName("Idade:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.idade)
        </dd>

        <dt>
            @Html.DisplayName("Atividade:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Atividade.nome)
        </dd>

        <dt>
            @Html.DisplayName("Empresa:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Empresa.nome)
        </dd>

        <dt>
            @Html.DisplayName("Setor:")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Setor.nome)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit", value="Excluir" class="btn btn-danger" />
            @Html.ActionLink("Voltar", "Index", new { area = "" }, new { @class = "btn btn-default" })
        </div>
    }
</div>
